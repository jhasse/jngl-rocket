{
	"version": "2.0.0",
	"linux": {
		"args": [
			"-lc",
			"cd \"\"${workspaceRoot}\"\" && clear && cd build && make -j$(nproc)"
		],
		"command": "/bin/bash"
	},
	"windows": {
		"args": [
			"-lc",
			"ninja -Cbuild"
		],
		"command": "C:/msys64/usr/bin/bash.exe"
	},
	"options": {
		"env": {
			"LANG": "C.UTF-8",
		}
	},
	"tasks": [
		{
			"label": "build",
			"problemMatcher": {
				"owner": "cpp",
				"fileLocation": [
					"absolute"
				],
				"pattern": {
					"regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error|fatal error):\\s+(.*)$",
					"file": 1,
					"line": 2,
					"column": 3,
					"severity": 4,
					"message": 5
				}
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}
